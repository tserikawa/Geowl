<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Geowl.Visualizer.MainWindow"
        Title="Geometry Visualizer"
        Width="800" Height="600">

    <Grid RowDefinitions="Auto,*">
        <!-- ボタンエリア（上部） -->
        <!-- <Button Grid.Row="0" Content="Clear" Margin="5" Clicked="Clear_Clicked"/> -->
         
         <StackPanel Orientation="Horizontal" Spacing="5">
            <Button Click="DeleteAllClickHandler">全消去</Button>
            <Button Click="DeleteLineClickHandler">線分消去</Button>
        </StackPanel>
        
        <!-- Canvasエリア（下部、残りすべて） -->
        <Canvas Grid.Row="1"
                x:Name="MainCanvas" 
                Background="White"
                PointerPressed="Canvas_PointerPressed">
            <!-- ここに点が追加される -->
        </Canvas>
    </Grid>
</Window>